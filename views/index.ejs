<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Tasks Dashboard</h1>
  <a href="/add" class="btn btn-primary">Add Task</a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.forEach(task => { %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.createdAt.toLocaleString() %></td>
        <td>
          <a href="/edit/<%= task._id %>" class="btn btn-sm btn-warning">Edit</a>
          <a href="/delete/<%= task._id %>" class="btn btn-sm btn-danger">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
